<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="STEMNotes.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:STEMNotes"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="STEMNotes">

    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <!--Menu bar-->
        <MenuBar>
            <MenuBarItem Title="Help">
                <MenuFlyoutItem Text="Creating new notes"></MenuFlyoutItem>
                <MenuFlyoutItem Text="Math, science and coding notations"></MenuFlyoutItem>
                <MenuFlyoutItem Text="Exporting notes"></MenuFlyoutItem>
            </MenuBarItem>
            <MenuBarItem Title="Settings">
                
            </MenuBarItem>
        </MenuBar>
        <!--Portrait and landscape notes creation-->
        <Button Grid.Row="1" Grid.Column="0" Width="300" Height="300" Margin="50,0,0,200"
                FontSize="20" VerticalContentAlignment="Bottom" BorderThickness="0" Background="Transparent"
                x:Name="portraitNoteBtn">
            <StackPanel>
                <Image Source="/Assets/portrait.png" Stretch="UniformToFill"></Image>
                <TextBlock Text="New Portrait note" HorizontalAlignment="Center" Margin="0,-20,0,0"></TextBlock>
            </StackPanel>
        </Button>
        <Button Grid.Row="1" Grid.Column="1" Width="300" Height="300" Margin="0,0,0,200"
                FontSize="20" VerticalContentAlignment="Bottom" BorderThickness="0" Background="Transparent"
                x:Name="landscapeNoteBtn">
            <StackPanel>
                <Image Source="/Assets/landscape.png" Stretch="UniformToFill"></Image>
                <TextBlock Text="New Landscape note" HorizontalAlignment="Center" Margin="0,-50,0,0"></TextBlock>
            </StackPanel>
        </Button>
        <!--App name-->
        <TextBlock Grid.Row="1" Grid.Column="2" Width="300" Height="150" Margin="300,0,0,250" 
                   FontSize="50" TextWrapping="Wrap" TextAlignment="Center">
            STEMNotes version 1.0.0
        </TextBlock>
        <!--Open existing notes button-->
        <Button Grid.Row="2" Grid.Column="0" VerticalAlignment="Bottom" Margin="50, 0, 0, 40"
                Width="400" Height="150" FontSize="40"
                x:Name="openExistingNoteBtn">
            Open existing note
        </Button>
        
        <!--Company name-->
        <TextBlock Grid.Row="2" Grid.Column="1" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,0,50,50" FontSize="40">
            Yicong's projects
        </TextBlock>
    </Grid>
</Window>
