<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="STEMNotes.FileCreationPageTypeStep"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:STEMNotes"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <TextBlock Grid.Row="0">Page type</TextBlock>
        <!--3 page types most commonly used for STEM-->
        <StackPanel Orientation="Horizontal" Grid.Row="1">
            <RadioButton>Blank</RadioButton>
            <RadioButton>Ruled</RadioButton>
            <RadioButton>Graph</RadioButton>
        </StackPanel>
        <!--Step 2-->
        <StackPanel Orientation="Horizontal" Grid.Row="2">
            <Button>Previous</Button>
            <Button>Next</Button>
            <Button>Cancel</Button>
        </StackPanel>
    </Grid>
</Page>
